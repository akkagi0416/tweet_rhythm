<script>
$(function(){
  $('button').click(function(){
    var screen_name = $('#screen_name').val();
    var request = $.ajax({
      type: "POST",
      //url: "/",
      url: window.location.href + "/",
      data:{ screen_name: screen_name }
    });

    request.done(function(data){
      console.log('ajax success');
      //console.log(data);
      $('#result').html(data);
    }).fail(function(e){
      console.log('ajax error');
    });
  });
});
